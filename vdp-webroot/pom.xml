<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>vdp-portal-parent</artifactId>
        <groupId>cn.goldencis</groupId>
        <version>6.0.0-SNAPSHOT</version>
    </parent>

    <groupId>cn.goldencis</groupId>
    <artifactId>vdp-webroot</artifactId>
    <version>6.0.0-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>vdp-webroot Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <dependencies>
        <dependency>
            <groupId>cn.goldencis</groupId>
            <artifactId>vdp-common</artifactId>
            <version>6.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>cn.goldencis</groupId>
            <artifactId>vdp-core</artifactId>
            <version>6.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>cn.goldencis</groupId>
            <artifactId>vdp-example</artifactId>
            <version>6.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <resources>
            <resource>
                <targetPath>${project.build.directory}/classes</targetPath>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>log4j.properties</include>
                    <include>vdp-common.properties</include>
                </includes>
            </resource>
            <resource>
                <targetPath>${project.build.directory}/classes/${deploy.type}</targetPath>
                <directory>src/main/resources/${deploy.type}</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/spring-context.xml</include>
                    <include>**/spring-mvc.xml</include>
                    <include>**/spring-security.xml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>${project.build.directory}/classes/mybatis</targetPath>
                <directory>src/main/resources/mybatis</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/mybatis-config-all.xml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <warName>vdp</warName>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.2.3.v20140905</version>
                <configuration>
                    <webApp>
                        <contextPath>/vdp</contextPath>
                    </webApp>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>spring</id>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <deploy.type>spring</deploy.type>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>mybatis</id>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <deploy.type>mybatis</deploy.type>
            </properties>
        </profile>
    </profiles>
</project>